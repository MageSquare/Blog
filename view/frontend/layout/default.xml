<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MageSquare_Base::vendor/slick/msslick.min.css"/>
        <css src="MageSquare_Blog::css/custom.css"/>
    </head>
    <body>
        <referenceBlock name="footer_links">
            <block class="MageSquare\Blog\Block\Link" ifconfig="msblog/display_settings/display_at_footer" name="msblog_footer_link">
                <arguments>
                    <argument name="label" xsi:type="string">Blog</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="header.links">
            <block class="MageSquare\Blog\Block\Link" ifconfig="msblog/display_settings/display_at_toolbar" name="msblog_toolbar_link">
                <arguments>
                    <argument name="label" xsi:type="string">Blog</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="MageSquare\Blog\Block\Link" ifconfig="msblog/display_settings/display_at_toolbar" name="msblog_toolbar_link_ultimo">
                <arguments>
                    <argument name="label" xsi:type="string">Blog</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
