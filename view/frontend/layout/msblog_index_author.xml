<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="msblog_default"/>
    <body>

        <referenceContainer name="header">
            <block class="MageSquare\Blog\Block\Content\Lists\Wrapper" name="msblog.content.list.wrapper" as="msblog_content_list_wrapper" />
        </referenceContainer>

        <referenceContainer name="layout.content">
            <block class="MageSquare\Blog\Block\Content\Author"
                   name="msblog.author.posts.list"
                   as="list"
                   template="MageSquare_Blog::list.phtml">
                <block class="MageSquare\Blog\Block\Layout\AuthorInfo"
                       name="msblog.author.title"
                       as="additional"
                       template="MageSquare_Blog::author-title.phtml"/>
            </block>
        </referenceContainer>

        <referenceContainer name="additional.sidebar">
            <block class="MageSquare\Blog\Block\Layout\AuthorInfo" name="author.info" />
        </referenceContainer>
    </body>
</page>
